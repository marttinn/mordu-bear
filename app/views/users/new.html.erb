<% provide(:title, 'Alta de Usuarios') %>
<h1>Dar de Alta</h1>
<p> Formulario de Dar de alta</p>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

      <%= render 'shared/error_messages' %>

      <%= f.label :name, "Nombre" %>
      <%= f.text_field :name %>

      <%= f.label :lastname,"Apellidos" %>
      <%= f.text_field :lastname %>

      <%= f.label :permissions, "Permisos" %>
      <%= f.text_field :permissions %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation,'ConfirmaciÃ³n de Password' %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Crear Usuario", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
